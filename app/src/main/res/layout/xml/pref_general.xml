<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_device_name"
        android:inputType="textCapWords"
        android:key="general_device_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_device_name" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_home_station"
        android:inputType="textNoSuggestions"
        android:key="general_home_station"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_home_station" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_deploy_timer"
        android:inputType="number"
        android:key="general_deploy_timer"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_deploy_timer" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="general_self_clear"
        android:title="@string/pref_title_self_clear" />

</PreferenceScreen>
